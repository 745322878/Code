<Page
    x:Class="HyperlinkButton超链接.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HyperlinkButton超链接"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel >
            <HyperlinkButton  Width=" 200" Height=" 50" Content="链接按钮 "
                              Background="Blue" Foreground="Orange"  FontWeight="Bold" 
                              Margin=" 0,0,0,30">
                
            </HyperlinkButton>
            <!--点击Google按钮,将会跳转到IE并打开网页-->
            <HyperlinkButton Content=" Google" NavigateUri="http://hao.360.cn/"/>
        </StackPanel>
    </Grid>
</Page>

