<Page
    x:Class="Socket___Tcp协议.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Socket___Tcp协议"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel >
            <TextBlock  Text="StreamSocket" FontSize="60" TextAlignment="Center" Margin="0,40,0,0" />
            <Button x:ConnectionId='1' Width="400"  Content="开始监听" x:Name="listenButton"                            />
            <Button x:ConnectionId='2'   Width="400"  Content="链接Socket" x:Name="linkButton"                         />
            <TextBox  x:Name="send_Message" FontSize="30"  BorderBrush="Aquamarine"  />
            <Button x:ConnectionId='3'  Width="400" Content="发送消息" x:Name="sendButton"                         />
            <Button x:ConnectionId='4'  Width="400" Content="关闭" x:Name="close"                    />
            <ScrollViewer  Height="150">
                <StackPanel x:Name="receive_Msg" >
                    <!--<TextBlock TextWrapping="Wrap" Text="收到的消息" FontSize="30"/>--> 
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        
    </Grid>
</Page>

