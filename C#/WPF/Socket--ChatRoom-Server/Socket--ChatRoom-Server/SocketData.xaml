<Window x:Class="Socket__ChatRoom_Server.SocketData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SocketData" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Button  Width="150" Height="80" Content="断开连接" FontSize="25" Click="Button_Click" HorizontalAlignment="Left"/>
        <ListBox  HorizontalAlignment="Right" x:Name="listbox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Message}" Height="50" FontSize="25" Width="340" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
