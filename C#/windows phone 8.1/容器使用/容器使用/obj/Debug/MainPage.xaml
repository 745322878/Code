<Page
    x:Class="容器使用.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:容器使用"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel >
            <Button x:ConnectionId='1' Content="创建Container"                               FontSize="30"/>
            <Button x:ConnectionId='2' Content="添加信息"                            FontSize="30"/>
            <Button x:ConnectionId='3' Content="删除信息"                             FontSize="30"/>
            <Button x:ConnectionId='4' Content="删除Container"                               FontSize="30"/>
            <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap"  FontSize="40"/>
        </StackPanel>
    </Grid>
</Page>

