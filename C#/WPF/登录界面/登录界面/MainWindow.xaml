<Window x:Class="登录界面.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="50">
                <TextBlock  Text="用户名" Foreground="Black"  FontSize="30"  Height="50" Margin="0"/>
                <TextBox Width="300" Height="50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="50,0" >
                <TextBlock  Text="密码" Foreground="Black"  FontSize="30"  Height="50"  Margin="30,0,0,0" />
                <TextBox Width="300" Height="50" HorizontalAlignment="Right" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button  Height="50" Width="100" Margin="100,40,100,40" Content="登录" FontSize="25" Background="MediumPurple" Click="Button_Click" />
                <Grid  Width="100" Height="50" Margin="0,0,100,0" x:Name="grid"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
