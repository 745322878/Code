<Page
    x:Class="RadioButton单选按钮.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RadioButton单选按钮"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel >
            <TextBlock FontSize=" 32" Height=" 57" Name="textBlock1" 
                       Text=" 你喜欢那一个品牌的手机？">
            </TextBlock>
            <RadioButton x:ConnectionId='1'  GroupName="MCSites" Background="Yellow" Foreground="Blue" 
                          Content="A.诺基亚 " FontSize="30"                          
                          Name="a">
            </RadioButton>
            <RadioButton x:ConnectionId='2' GroupName="MCSites" Background="Yellow" Foreground="Orange" 
                         Content="B.苹果" FontSize="30"                          
                         Name="b">
                
            </RadioButton>
            <RadioButton x:ConnectionId='3' GroupName="MCSites" Background="Yellow" Foreground="Orange" 
                         Content="C.其他" FontSize="30"                          
                         Name="c">

            </RadioButton>
            <TextBlock FontSize="34" Text="你选择的答案是:" Name=" textBlock2">
            </TextBlock>
            <TextBlock FontSize="34" Name="answer"/>
        </StackPanel >
    </Grid>
</Page>

