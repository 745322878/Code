<Page
    x:Class="图形绘制.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:图形绘制"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel >
        <Ellipse Fill="Yellow" Height="200" Width="200" Stroke="Blue" StrokeThickness="70"
                 StrokeDashArray="1">
            
        </Ellipse>
        <Line  X1="50" Y1="75" X2="250" Y2="75" Stroke="Red" StrokeThickness="10"
               StrokeDashArray="1.5" StrokeDashCap="Round"  />
        <Polyline  Points="0, 160 25,140,50,160 75,140 100,160 125,140 150,160" Stroke="Orange" StrokeThickness="5" />
    </StackPanel>
</Page> 
