<Window x:Class="ADO.Net基础.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid >
        <StackPanel Orientation="Vertical" >
            <Button Click="Button_Click" Width="100" Height="50"  Content="连接数据库" FontSize="15" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" >
                <TextBox  Width="200" Height="30" x:Name="textBox"/>
                <Button  Content="查询" Width="100" Height="50" Margin="50,0,0,0" Click="Button_Click_1"/>
            </StackPanel>
            <TextBox Width="200" Height="30" HorizontalAlignment="Left" x:Name="scoretextBox"/>
            <Button  Width="100" Height="50" HorizontalAlignment="Left" Click="Button_Click_2" Content="DataSet"/>
            <Button Width="100" Height="50" HorizontalAlignment="Left" Click="Button_Click_3" Content="SqlHelper"/>
        </StackPanel>
    </Grid>
  
</Window>
