<Page
    x:Class="容器使用.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:容器使用"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel >
            <Button Content="创建Container" Click="CreateContainer_Click" FontSize="30"/>
            <Button Content="添加信息" Click="WriteSetting_Click" FontSize="30"/>
            <Button Content="删除信息" Click="DeleteSetting_Click" FontSize="30"/>
            <Button Content="删除Container" Click="DeleteContainer_Click" FontSize="30"/>
            <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap"  FontSize="40"/>
        </StackPanel>
    </Grid>
</Page>
