<Window x:Class="SqlServer_SignIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="SpringGreen"/>
      
        </Grid.Background>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Height="50" Text="User" FontSize="20"/>
                <TextBox  Width="200" Height="50"  x:Name="userTextBox"/>

            </StackPanel>
            <StackPanel  Orientation="Horizontal" Margin="0,20">
                <TextBlock Text="Password" FontSize="20" Width="100" Height="50" />
                <TextBox Width="200" Height="50" x:Name="passwordTextBox" />
            </StackPanel>
            <Button  Content="SignIn" Width="100" Height="50" Background="Red" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
