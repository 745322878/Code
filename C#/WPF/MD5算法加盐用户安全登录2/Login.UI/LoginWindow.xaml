<Window x:Class="Login.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text="用户名" FontSize="20" Width="100"/>
                <TextBox Width="200" x:Name="txtName"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,50">
                <TextBlock  Text="密码" FontSize="20" Width="100"/>
                <TextBox Width="200" x:Name="txtPassword"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button  Content="登录" FontSize="20" Margin="70,0" Click="loginClick"/>
                <Button  Content="取消" FontSize="20" Click="showoutClick"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
